<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>UserLogin</servlet-name>
    <servlet-class>com.virtualcloset.servlet.UserLogin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserRegister</servlet-name>
    <servlet-class>com.virtualcloset.servlet.UserRegister</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PostManager</servlet-name>
    <servlet-class>com.virtualcloset.servlet.PostManager</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FetchUserInfo</servlet-name>
    <servlet-class>com.virtualcloset.servlet.FetchUserInfo</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UploadFile</servlet-name>
    <servlet-class>com.virtualcloset.servlet.UploadFile</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DownloadFile</servlet-name>
    <servlet-class>com.virtualcloset.servlet.DownloadFile</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListNeedResource</servlet-name>
    <servlet-class>com.virtualcloset.servlet.ListNeedResource</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>UserLogin</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserRegister</servlet-name>
    <url-pattern>/reg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PostManager</servlet-name>
    <url-pattern>/manager</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FetchUserInfo</servlet-name>
    <url-pattern>/fetchUserInfo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UploadFile</servlet-name>
    <url-pattern>/uploadfile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DownloadFile</servlet-name>
    <url-pattern>/downloadfile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListNeedResource</servlet-name>
    <url-pattern>/listNeedResource</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
